{
  "name": "soccer-stats-ui-infra",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/soccer-stats/ui-infra",
  "implicitDependencies": ["soccer-stats-ui"],
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/soccer-stats/ui-infra",
        "main": "apps/soccer-stats/ui-infra/src/index.ts",
        "tsConfig": "apps/soccer-stats/ui-infra/tsconfig.build.json",
        "assets": []
      }
    },
    "up": {
      "executor": "nx:run-commands",
      "parallelism": false,
      "options": {
        "command": "pulumi up --yes",
        "cwd": "apps/soccer-stats/ui-infra"
      },
      "dependsOn": [
        "^build",
        "build",
        "soccer-stats-ui:build",
        "soccer-stats-infra:up"
      ]
    },
    "preview": {
      "executor": "nx:run-commands",
      "parallelism": false,
      "options": {
        "command": "pulumi preview",
        "cwd": "apps/soccer-stats/ui-infra"
      },
      "dependsOn": [
        "^build",
        "build",
        "soccer-stats-ui:build",
        "soccer-stats-infra:preview"
      ]
    },
    "refresh": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pulumi refresh --yes",
        "cwd": "apps/soccer-stats/ui-infra"
      }
    },
    "import": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pulumi import",
        "cwd": "apps/soccer-stats/ui-infra"
      }
    }
  },
  "tags": ["type:infra", "domain:sports", "scope:soccer-stats"]
}
