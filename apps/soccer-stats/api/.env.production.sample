# Production Environment Variables for Soccer Stats API
# Copy these to your Railway project environment variables

# Node Environment
NODE_ENV=production
PORT=3333

# Database Configuration (Neon PostgreSQL)
# Use the pooled connection string from Neon dashboard
DB_HOST=ep-xxx-xxx-pooler.region.aws.neon.tech
DB_PORT=5432
DB_USERNAME=neondb_owner
DB_PASSWORD=your_neon_password_here
DB_NAME=neondb

# Database Options
DB_SYNCHRONIZE=true  # Set to false after initial deployment and use migrations
DB_LOGGING=false

# GraphQL Configuration
GRAPHQL_INTROSPECTION=false  # Set to true only for debugging

# CORS Configuration
# Comma-separated list of allowed origins
FRONTEND_URL=https://your-app.vercel.app

# Clerk Authentication (get from Clerk dashboard)
CLERK_SECRET_KEY=sk_live_your_clerk_secret_key
CLERK_JWT_AUDIENCE=your_clerk_audience
